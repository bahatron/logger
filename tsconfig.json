{
    "compilerOptions": {
        "moduleResolution": "node",
        "esModuleInterop": true,
        "removeComments": true,
        "declaration": true,
        "diagnostics": true,
        "incremental": true,
        "sourceMap": true,
        "outDir": "dist",
        "strict": true,
        "resolveJsonModule": true
    },
    "exclude": [
        "node_modules",
        "dist"
    ]
}